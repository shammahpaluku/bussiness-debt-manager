{
  "name": "vinledger",
  "version": "1.0.5",
  "description": "Wine & Liquor Debtors Manager - Single User Desktop App",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run webpack:dev\" \"wait-on http://localhost:3001 && electron .\"",
    "webpack:dev": "webpack serve --mode development --port 3001",
    "webpack:build": "webpack --mode production",
    "electron:dev": "electron .",
    "gen:icons": "node scripts/generate-icons.js",
    "build": "npm run gen:icons && npm run webpack:build && electron-builder",
    "build:win": "npm run gen:icons && npm run webpack:build && electron-builder --win",
    "build:linux": "npm run gen:icons && npm run webpack:build && electron-builder --linux",
    "dist": "npm run gen:icons && npm run webpack:build && electron-builder --publish=never"
  },
  "keywords": [
    "wine",
    "debtors",
    "credit",
    "management",
    "electron"
  ],
  "author": "Shammah Paluku <shammahpaluku@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shammahpaluku/bussiness-debt-manager.git"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "wait-on": "^7.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "png-to-ico": "^2.1.8",
    "sharp": "^0.33.3"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.0",
    "electron-updater": "^6.1.7",
    "crypto-js": "^4.2.0",
    "nodemailer": "^6.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.vinledger.app",
    "productName": "VinLedger",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/**/*",
      "src/**/*",
      "database/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "maintainer": "Shammah Paluku <shammahpaluku@users.noreply.github.com>",
      "category": "Office"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "publish": [
      "github"
    ]
  }
}
